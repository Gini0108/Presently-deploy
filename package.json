    "url": "git+https://github.com/krijn-inc/Romeo-server.git"
  },
  "author": "Wouter de Bruijn & Sjors van Holst",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/krijn-inc/Romeo-server/issues"
  },
  "homepage": "https://github.com/krijn-inc/Romeo-server#readme",
  "dependencies": {
    "dotenv": "^8.2.0",
    "events": "^3.2.0",
    "express": "^4.17.1",
    "formidable": "^1.2.2",
    "get-folder-size": "^2.0.1",
    "nodemon": "^2.0.6",
    "slideshow": "^1.0.4",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
